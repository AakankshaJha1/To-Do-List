{
    "manifest_version": 2,
    "name": "My Todo List",
    "version": "1.0",
    "description": "A plain text description",
    "icons": {
      "128": "icon.png"
    },
  
    "browser_action": {
      "popup": "popup.html",
      "default_popup": "popup.html"
    },
    "options_page": "option.html",
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "background": {
        "scripts" : ["background.js"],
        "persistent":false
    }
  }